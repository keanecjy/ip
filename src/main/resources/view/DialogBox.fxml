<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<fx:root alignment="TOP_RIGHT"
         maxHeight="620.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/11"
         xmlns:fx="http://javafx.com/fxml/1">
    <VBox style="-fx-background-color: whitesmoke;
    -fx-border-width: 0.5;
    -fx-border-color: transparent;
    -fx-border-radius: 30;
    -fx-padding: 20">
        <Label
                fx:id="dialog"
                text="Label"
                textFill="#2c2929"
                wrapText="true">
            <HBox.margin>
                <Insets left="8.0"
                        right="8.0"/>
            </HBox.margin>
        </Label>
    </VBox>
    <ImageView fx:id="displayPicture"
               fitHeight="200.0"
               fitWidth="200.0"
               pickOnBounds="true"
               preserveRatio="true">
        <HBox.margin>
            <Insets left="5.0"/>
        </HBox.margin>
    </ImageView>
    <padding>
        <Insets bottom="15.0"
                left="1.0"
                right="3.0"
                top="15.0"/>
    </padding>
</fx:root>
